        /* Navbar Styles */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            padding: 1.5rem 2rem;
            transition: all 0.4s ease;
            will-change: transform; /* Optimization for animations */
