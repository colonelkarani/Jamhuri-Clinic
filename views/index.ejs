            text-align: center;
            transition: all 0.3s;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
        }
        
        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            margin: 10px 0;
        }
        
        .stat-label {
            color: var(--gray);
            font-size: 0.9rem;
        }
        
        .bp-systolic {
            color: var(--primary);
        }
        
        .bp-diastolic {
            color: var(--purple);
        }
        
        .heart-rate {
            color: var(--danger);
        }
        
        .weight {
            color: var(--teal);
        }
        
        .blood-sugar {
            color: var(--warning);
        }
        
        .oxygen {
            color: var(--secondary);
        }
        
        @media (max-width: 1200px) {
            .graph-grid {
                grid-template-columns: 1fr;
            }
            
            .stats-cards {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        
        @media (max-width: 992px) {
            .dashboard {
                grid-template-columns: 1fr;
            }
            
            .main-content {
                grid-template-columns: 1fr;
            }
            
            .vital-signs-form {
                grid-template-columns: 1fr;
            }
            
            .save-btn {
                grid-column: span 1;
            }
            
            .stats-cards {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="welcome-message">
                <h1>Welcome, <%= name %>!</h1>
                <p>Track and manage your health metrics</p>
            </div>
            <div class="user-account">
                <div class="user-avatar"><%= name[0].toUpperCase() %></div>
                <form action="/logout?_method=DELETE" method="POST">
                <button class="logout-btn" type="submit">Logout</button>
</form>
            </div>
        </header>
        
        <div class="dashboard">
            <aside class="sidebar">
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="#" class="nav-link active" data-section="vital-signs">
                            <i>‚ù§Ô∏è</i> Vital Signs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" data-section="blood-sugar">
                            <i>ü©∏</i> Blood Sugar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" data-section="medications">
                            <i>üíä</i> Medications
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" data-section="appointments">
                            <i>üìÖ</i> Appointments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" data-section="graphs">
                            <i>üìä</i> View Graphs
                        </a>
                    </li>
                </ul>
            </aside>
            
            <div class="main-content">
                <div class="content-area">
                    <!-- Vital Signs Section -->
                    <section id="vital-signs" class="section active">
                        <h2 class="section-title"><i>‚ù§Ô∏è</i> Vital Signs</h2>
                        <form class="vital-signs-form" id="vital-signs-form" method="POST" action="/vitals">
                            <div class="form-group">
                                <label for="blood-pressure">Blood Pressure (mmHg)</label>
                                <input type="text" class="form-control" name="bloodPressure" id="blood-pressure" placeholder="e.g., 120/80">
                            </div>
                            <div class="form-group">
                                <label for="heart-rate">Heart Rate (bpm)</label>
                                <input type="number" class="form-control" name="heartRate" id="heart-rate" placeholder="e.g., 72">
                            </div>
                            <div class="form-group">
                                <label for="temperature">Temperature (¬∞C)</label>
                                <input type="number" class="form-control" id="temperature" name="temperature" placeholder="e.g., 37.6" step="0.1">
                            </div>
                            <div class="form-group">
                                <label for="respiratory-rate">Respiratory Rate (breaths/min)</label>
                                <input type="number" class="form-control" id="respiratory-rate" name="respRate" placeholder="e.g., 16">
                            </div>
                            <div class="form-group">
                                <label for="oxygen-saturation">Oxygen Saturation (%)</label>
                                <input type="number" class="form-control" id="oxygen-saturation" name="oxygenSaturation" placeholder="e.g., 98" min="0" max="100">
                            </div>
                            <div class="form-group">
                                <label for="weight">Weight (kgs)</label>
                                <input type="number" class="form-control" id="weight" name="weight" placeholder="e.g., 150" step="0.1">
                            </div>
                            <button type="submit" class="save-btn">Save Vital Signs</button>
                        </form>
                    </section>
                    
                    <!-- Blood Sugar Section -->
                    <section id="blood-sugar" class="section">
                        <h2 class="section-title"><i>ü©∏</i> Blood Sugar Tracking</h2>
                        <form class="vital-signs-form" method="POST" action="/blood-sugar">
                            <div class="form-group">
                                <label for="blood-sugar-level">Blood Sugar Level (mmol/L)</label>
                                <input type="number" name="bloodSugar" class="form-control" id="blood-sugar-level" step="0.1" placeholder="e.g., 5.1">
                            </div>
                            <div class="form-group">
                                <label for="measurement-time">Time of Measurement</label>
                                <select class="form-control" name="measurementTime" id="measurement-time">
                                    <option value="fasting">Fasting</option>
                                    <option value="before-meal">Before Meal</option>
                                    <option value="after-meal">After Meal</option>
                                    <option value="bedtime">Bedtime</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="blood-sugar-date">Date</label>
                                <input type="date" name="date" class="form-control" id="blood-sugar-date">
                            </div>
                            <div class="form-group">
                                <label for="blood-sugar-notes">Notes</label>
                                <textarea class="form-control" id="blood-sugar-notes" name="notes" rows="2" placeholder="Any additional notes..."></textarea>
                            </div>
                            <button type="submit" class="save-btn">Save Blood Sugar Reading</button>
                        </form>
                    </section>
                    
                    <!-- Medications Section -->
                    <section id="medications" class="section">
                        <h2 class="section-title"><i>üíä</i> Medications</h2>
                        <ul class="medication-list">
                            <li class="medication-item">
                                <div>
                                    <div class="medication-name">Lisinopril</div>
                                    <div class="medication-details">10mg, Once daily</div>
                                </div>
                                <div class="medication-status status-active">Active</div>
                            </li>
                            <li class="medication-item">
                                <div>
                                    <div class="medication-name">Metformin</div>
                                    <div class="medication-details">500mg, Twice daily</div>
                                </div>
                                <div class="medication-status status-active">Active</div>
                            </li>
                            <li class="medication-item">
                                <div>
                                    <div class="medication-name">Atorvastatin</div>
                                    <div class="medication-details">20mg, Once daily at bedtime</div>
                                </div>
                                <div class="medication-status status-active">Active</div>
                            </li>
                        </ul>
                         <!-- Add Medication Form -->
  <form id="medicationForm" class="medication-form" style=" margin-top:15px;" action="/meds" method="POST">
    <input type="text" id="medicationName" name="medicationName" placeholder="Medication Name" required>
    <input type="text" id="medicationDose" name="dosage" placeholder="Dosage & Frequency (e.g., 10mg, Once daily)" required>
    <select id="medicationStatus" name="status">
      <option value="Active">Active</option>
      <option value="Stopped">Stopped</option>
    </select>
    <button type="submit" class="save-btn">Add Medication</button>
  </form>

 
                    </section>
                    
                    <!-- Appointments Section -->
                    <section id="appointments" class="section">
                        <h2 class="section-title"><i>üìÖ</i> Appointments</h2>
                        <ul class="appointment-list">
                            <li class="appointment-item">
                                <div>
                                    <div class="appointment-title">Annual Physical</div>
                                    <div class="appointment-details">Dr. Johnson - Oct 15, 2025 - 10:00 AM</div>
                                </div>
                                <div class="appointment-status status-upcoming">Upcoming</div>
                            </li>
                            <li class="appointment-item">
                                <div>
                                    <div class="appointment-title">Cardiologist Follow-up</div>
                                    <div class="appointment-details">Dr. Martinez - Nov 5, 2025 - 2:30 PM</div>
                                </div>
                                <div class="appointment-status status-upcoming">Upcoming</div>
                            </li>
                            <li class="appointment-item">
                                <div>
                                    <div class="appointment-title">Dental Cleaning</div>
                                    <div class="appointment-details">Dr. Lee - Sep 28, 2025 - 9:15 AM</div>
                                </div>
                                <div class="appointment-status status-completed">Completed</div>
                            </li>
                        </ul>
                         <form id="appointmentForm" class="appointment-form" method="POST" action="/user-appointments" style=" margin-top:15px;">
    <input type="text" id="appointmentTitle" name="title" placeholder="Appointment Title" required>
    <input type="text" id="appointmentDoctor" name="drName" placeholder="Doctor's Name" required>
    <input type="date" id="appointmentDate" name="date" required>
    <input type="time" id="appointmentTime" name="time" required>
    <select id="appointmentStatus" name="status">
      <option value="Upcoming">Upcoming</option>
      <option value="Completed">Completed</option>
    </select>
    <button type="submit" class="save-btn">Add Appointment</button>
  </form>
                    </section>
                    
                    <!-- Graphs Section -->
                    <section id="graphs" class="section">
                        <h2 class="section-title"><i>üìä</i> Health Trends & Analytics</h2>
                        
                        <div class="stats-cards">
                            <div class="stat-card">
                                <div class="stat-label">Blood Pressure</div>
                                <div class="stat-value"><span class="bp-systolic">122</span>/<span class="bp-diastolic">78</span></div>
                                <div class="stat-unit">mmHg</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-label">Heart Rate</div>
                                <div class="stat-value heart-rate">72</div>
                                <div class="stat-unit">bpm</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-label">Weight</div>
                                <div class="stat-value weight">152.3</div>
                                <div class="stat-unit">kgs</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-label">Blood Sugar</div>
                                <div class="stat-value blood-sugar">4.9</div>
                                <div class="stat-unit">mmol/L</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-label">Oxygen Sat.</div>
                                <div class="stat-value oxygen">98</div>
                                <div class="stat-unit">%</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-label">Temperature</div>
                                <div class="stat-value">98.6</div>
                                <div class="stat-unit">¬∞C</div>
                            </div>
                        </div>
                        
                        <div class="graph-grid">
                            <div class="graph-container">
                                <div class="graph-title"><i>‚ù§Ô∏è</i> Blood Pressure Trend</div>
                                <canvas id="bpChart"></canvas>
                            </div>
                            <div class="graph-container">
                                <div class="graph-title"><i>üìà</i> Heart Rate Trend</div>
                                <canvas id="hrChart"></canvas>
                            </div>
                            <div class="graph-container">
                                <div class="graph-title"><i>‚öñÔ∏è</i> Weight Progress</div>
                                <canvas id="weightChart"></canvas>
                            </div>
